<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CepteSokApp.KargoTeslimat"
             NavigationPage.IconColor="Black"
             Title="MyBugdetTransactionPage">


    <NavigationPage.TitleView>
        <StackLayout>
            <Label Text="Kargo Teslimat" FontSize="15" Padding="70,0,0,0"/>
        </StackLayout>
    </NavigationPage.TitleView>

    <ContentPage.Content>

        <ListView ItemsSource="{Binding ProductList}"
                  HasUnevenRows="True"
                  SeparatorVisibility="None"
                  ItemTapped="OnItemSelected"
                  >

            <ListView.ItemTemplate>

                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="10" RowSpacing="10" ColumnSpacing="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>


                            <Image HeightRequest="60"
                                   HorizontalOptions="CenterAndExpand"
                                   VerticalOptions="CenterAndExpand"
                                   Aspect="AspectFill"
                                   WidthRequest="66"
                                   Grid.RowSpan="3"
                                   Source="{Binding ImageUrl}"/>

                            <Label Grid.Column="1"
                                   Text="{Binding Name}"
                                   VerticalOptions="End"
                                   HorizontalTextAlignment="Center"/>

                            <Label Text="{Binding ProductExplain}" 
                                   VerticalOptions="Start" 
                                   HorizontalTextAlignment="Center"
                                   Grid.Column="1"
                                   Grid.Row="1"/>

                            <StackLayout Grid.Column="1"
                                       Grid.Row="2"
                                         Orientation="Horizontal">
                                <Label Text="{Binding ProductPrice}" 
                                       TextColor="#ff3824"
                                       BackgroundColor="#ffe000"
                                       Padding="2"
                                       CharacterSpacing=".5"
                                       />
                                
                            </StackLayout>
                            

                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
            
            
        </ListView>
        
        
        
